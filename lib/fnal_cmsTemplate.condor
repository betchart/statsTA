#universe = globus
#globusscheduler = cmsosgce.fnal.gov/jobmanager-condor
#+LENGTH="SHORT"

universe = vanilla

Executable = condor/JOBFLAG
Requirements = target.OpSys == "LINUX"

transfer_output_files = OUTFLAG
Should_Transfer_Files = YES
WhenToTransferOutput = ON_EXIT

Output = condor/JOBFLAG_$(Cluster)_$(Process).stdout
Error = condor/JOBFLAG_$(Cluster)_$(Process).stderr
Log = condor/JOBFLAG_$(Cluster)_$(Process).log
notify_user = ${LOGNAME}@FNAL.GOV

Queue
